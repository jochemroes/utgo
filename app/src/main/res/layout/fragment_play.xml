<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayFragment">

    <fragment
        android:id="@+id/ux_fragment"
        android:name="nl.utwente.utgo.arcorelocation.NFSArFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/play_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/play_popup_background"
        android:elevation="10dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/scroll_padding_bottom"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/ux_fragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/PopupTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/popup_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".6"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/popup_title_size"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/close_button"
                        android:layout_width="@dimen/popup_button_dimen"
                        android:layout_height="@dimen/popup_button_dimen"
                        android:layout_weight=".2"
                        android:gravity="center"
                        android:src="@drawable/ic_outline_keyboard_arrow_down_24"
                        app:tint="#FFFFFF" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/inner_play_popup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/popup_button"
        android:layout_width="@dimen/popup_button_dimen"
        android:layout_height="@dimen/popup_button_dimen"
        android:layout_marginBottom="@dimen/scroll_padding_bottom"
        android:src="@drawable/ic_outline_keyboard_arrow_up_24"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/ux_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/text_color" />


</androidx.constraintlayout.widget.ConstraintLayout>