<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center"
        android:height="@dimen/splash_screen_logo_dimen"
        android:width="@dimen/splash_screen_logo_dimen">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="#9CE62A"
                android:endColor="#45B6FE"
                android:angle="45"/>
            <corners android:radius="@dimen/splash_screen_logo_radius" />
        </shape>
    </item>
    <item
        android:id="@+id/loading_animation"
        android:height="@dimen/splash_screen_logo_png_size"
        android:width="@dimen/splash_screen_logo_png_size"
        android:drawable="@mipmap/ic_launcher_foreground"
        android:gravity="center"/>
</layer-list>